{
  "compilerOptions": {
    "target": "ES2020",                          // Specify ECMAScript target version
    "module": "CommonJS",                        // Specify module code generation
    "strict": true,                              // Enable all strict type-checking options
    "esModuleInterop": true,                     // Enable interop between CommonJS and ES modules
    "skipLibCheck": true,                        // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,    // Disallow inconsistently-cased references to the same file
    "outDir": "./dist",                          // Redirect output structure to the 'dist' folder
    "rootDir": "./",                             // Specify the root directory of input files
    "resolveJsonModule": true,                   // Include modules that import .json files
    "baseUrl": "./",                             // Base directory to resolve non-relative module names
    "paths": {
      "*": ["node_modules/*"]                    // Paths to resolve modules
    }
  },
  "include": [
    "lib/**/*.ts",                               // Include TypeScript files in 'lib' directory
    "lambda/**/*.ts"                             // Include TypeScript files in 'lambda' directory
  ],
  "exclude": [
    "node_modules",                              // Exclude 'node_modules' directory
    "cdk.out",                                   // Exclude 'cdk.out' directory generated by CDK
    "dist"                                       // Exclude output directory to avoid including compiled files
  ]
}
